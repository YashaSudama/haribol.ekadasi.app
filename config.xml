<?xml version='1.0' encoding='utf-8'?>
<widget id="haribol.ekadasi.app" 
        version="1.0.0" 
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="schemas.android.com/apk/res/android">
    <name>ЭКАДАШИ</name>
    <description>
        Экадаши и Вайшнавские праздники
    </description>
    <author email="mantramusicland@gmail.com" href="https://mantramusic.ru/">
        Gaurananda dasi
    </author>
    <content src="index.html" />
    <allow-navigation href="https://api.opencagedata.com/*" />
    <allow-navigation href="https://ekadasi/*" />
    <allow-navigation href="ionic://ekadasi/*" />
    <allow-navigation href="https://ekadashi.admin.universl.top/*" />
    <access origin="https://api.opencagedata.com/" />
    <access origin="https://ekadashi.admin.universl.top/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />

        <resource-file src="www/img/notifications/notification_icon.xml" target="app/src/main/res/drawable/notification_icon.xml" />
        <config-file target="AndroidManifest.xml" parent="/manifest/application"> 
            <meta-data android:name="com.google.firebase.messaging.default_notification_icon" android:resource="@drawable/notification_icon" />
        </config-file>
        
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www\img\screen\android\splashscreen-app.png" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="AndroidWindowSplashScreenBackground" value="#d6e6ff" />

        <icon src="www/img/logo/android/logo_ldpi.png" density="ldpi" />
        <icon src="www/img/logo/android/logo_mdpi.png" density="mdpi" />
        <icon src="www/img/logo/android/logo_hdpi.png" density="hdpi" />
        <icon src="www/img/logo/android/logo_xhdpi.png" density="xhdpi" />
        <icon src="www/img/logo/android/logo_xxhdpi.png" density="xxhdpi" />
        <icon src="www/img/logo/android/logo_xxxhdpi.png" density="xxxhdpi" />

        <preference name="cordova.plugins.diagnostic.modules" value="LOCATION" />
        <preference name="Hostname" value="ekadasi" />
        <preference name="Scheme" value="https" />
        <preference name="StatusBarOverlaysWebView" value="false" />

    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="www/img/logo/ios/icon-small.png" width="29" height="29" />
        <icon src="www/img/logo/ios/icon-40.png" width="40" height="40" />
        <icon src="www/img/logo/ios/icon-50.png" width="50" height="50" />
        <icon src="www/img/logo/ios/icon.png" width="57" height="57" />
        <icon src="www/img/logo/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="www/img/logo/ios/icon-60.png" width="60" height="60" />
        <icon src="www/img/logo/ios/icon-72.png" width="72" height="72" />
        <icon src="www/img/logo/ios/icon-76.png" width="76" height="76" />
        <icon src="www/img/logo/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="www/img/logo/ios/icon-small@3x.png" width="87" height="87" />
        <icon src="www/img/logo/ios/icon-50@2x.png" width="100" height="100" />
        <icon src="www/img/logo/ios/icon@2x.png" width="114" height="114" />
        <icon src="www/img/logo/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/logo/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="www/img/logo/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/logo/ios/icon-167.png" width="167" height="167" />
        <icon src="www/img/logo/ios/icon-60@3x.png" width="180" height="180" /> 
        <icon src="www/img/logo/ios/icon-1024.png" width="1024" height="1024" />

        <splash src="www/img/screen/ios/Default@2x~universal~anyany.jpeg" />

        <preference name="Hostname" value="ekadasi" />
        <preference name="WKSuspendInBackground" value="false" />
        <preference name="ScrollEnabled" value="true" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="cordova.plugins.diagnostic.modules" value="LOCATION" />
        <preference name="StatusBarOverlaysWebView" value="false" />

    </platform>

</widget>
